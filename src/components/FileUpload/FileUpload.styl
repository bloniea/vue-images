.upload-form
    .uploader
        // margin 0 auto
        // display flex
        // justify-content left
        // position relative
        // flex-wrap wrap
        .uploader-content
            display flex
            flex-wrap wrap

            .uploader-box
                width 24%
                position relative
                height 150px
                display flex
                flex-direction column
                margin 10px (4% / 8)

                @media (max-width 557px)
                    width 48%
                    margin 8px 1%

                .uploader-img
                    width 100%
                    height 100%
                    overflow hidden
                    padding-bottom 5px

                    .el-image
                        width 100%
                        height 100%

                    .model
                        width 100%
                        height 100%
                        position absolute
                        left 0
                        top 0
                        background rgba(0, 0, 0, 0.6)

                        .el-icon
                            color $baseColor
                            font-size 50px
                            position absolute
                            top 50%
                            left 50%
                            transform translate(-50%, -50%)

                        .uploading svg
                            animation loading 2s linear infinite

                        .err
                            cursor pointer

                        @keyframes loading
                            0%
                                transform rotate(0deg)

                            50%
                                transform rotate(180deg)

                            100%
                                transform rotate(360deg)

            .uploader-input
                width 24%
                height 150px
                position relative
                margin-top 1rem
                margin-left 0.4rem

                @media (max-width 557px)
                    width 48%
                    margin 8px 1%

                .uploader-icon
                    width 100%
                    height 100%
                    // background pink
                    border 2px dashed pink
                    position absolute

                .uploader-input-file
                    opacity 0
                    width 100%
                    height 100%